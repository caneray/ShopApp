@model IEnumerable<IdentityRole>

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-dark text-white text-center">
            <h2>Rol Listesi</h2>
        </div>
        <div class="card-body">
            <div class="text-end mb-3">
                <a class="btn btn-info " href="/admin/role/create">Rol Oluştur</a>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 350px;">Id</th>
                        <th>Rol Adı</th>
                        <th style="width: 160px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="/admin/role/@item.Id" class="btn btn-info btn-sm mr-2">Düzenle</a>
                                    <form action="/admin/DeleteRole" method="POST" class="d-inline">
                                        <input type="hidden" name="RoleId" value="@item.Id">
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-warning">Rol bulunamadı</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
