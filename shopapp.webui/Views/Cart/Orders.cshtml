@model List<OrderListModel>

<div class="container mt-5">
    <h2 class="h-5 mb-4 mt-3">Geçmiş Siparişler</h2>
    @foreach (var order in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Sipariş Numarası: #@order.OrderNumber</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Ürün</th>
                            <th scope="col">Ad</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Adet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderItem in order.OrderItems)
                        {
                            <tr>
                                <td><img src="~/img/@orderItem.ImageUrl" alt="@orderItem.Name" class="img-fluid" style="max-width: 50px;"></td>
                                <td>@Html.Raw(orderItem.Name)</td>
                                <td>@Html.Raw(orderItem.Price.ToString("c"))</td>
                                <td>@Html.Raw(orderItem.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Müşteri Adı:</strong> @Html.Raw(order.FirstName) @Html.Raw(order.LastName)</p>
                        <p><strong>Adres:</strong> @Html.Raw(order.Address)</p>
                        <p><strong>Email:</strong> @Html.Raw(order.Email)</p>
                        <p><strong>Telefon:</strong> @Html.Raw(order.Phone)</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p><strong>Sipariş Durumu:</strong> @Html.Raw(order.OrderState)</p>
                        <p><strong>Ödeme Türü:</strong> @Html.Raw(order.PaymentType)</p>
                        <h5><strong>Toplam:</strong> @Html.Raw(order.TotalPrice().ToString("c"))</h5>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

